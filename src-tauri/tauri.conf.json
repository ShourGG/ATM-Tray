{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "ATM Tray",
  "version": "2.2.4",
  "identifier": "com.atm.tray",
  "build": {
    "frontendDist": "../src"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "title": "ATM Tray",
        "width": 320,
        "height": 650,
        "resizable": false,
        "maximizable": false,
        "center": true,
        "decorations": false,
        "transparent": false,
        "visible": true,
        "skipTaskbar": false,
        "alwaysOnTop": false,
        "devtools": false
      }
    ],
    "security": {
      "csp": "default-src 'self'; script-src 'self' 'unsafe-inline'; style-src 'self' 'unsafe-inline'; connect-src 'self' https://* wss://*",
      "dangerousDisableAssetCspModification": false
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/icon.ico"
    ]
  }
}
